<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="mainFragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="searchBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/search_background</item>
        <item name="android:layout_marginTop">@dimen/dp16</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/dp8</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/dp8</item>
    </style>

    <style name="searchBarEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/search_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ibmplexsans_regular</item>
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_marginStart">@dimen/dp8</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:importantForAutofill" tools:targetApi="o">no</item>
    </style>

    <style name="searchBarIcon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:contentDescription">@string/search_icon</item>
    </style>

    <style name="bottomNavigationBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginStart">@dimen/dp24</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:fontFamily">@font/ibmplexsans_regular</item>
        <item name="android:layout_marginTop">@dimen/dp24</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/dp16</item>
        <item name="android:padding">@dimen/dp8</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">@dimen/sp20</item>
    </style>

    <style name="Content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top</item>
        <item name="android:hint">@string/what_s_in_your_mind</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/dp16</item>
        <item name="android:padding">@dimen/dp8</item>
        <item name="android:fontFamily">@font/ibmplexsans_regular</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:inputType">textMultiLine</item>
<!--        <item name="android:includeFontPadding">false</item>-->
        <item name="android:minHeight">100dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="bottomSheet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dp16</item>
    </style>

    <style name="ColorPicker">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/dp8</item>
    </style>

    <style name="color">
        <item name="android:layout_width">@dimen/dp30</item>
        <item name="android:layout_height">@dimen/dp30</item>
        <item name="android:padding">@dimen/dp5</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/dp16</item>
    </style>

    <style name="bottomSheetItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp8</item>
        <item name="android:layout_margin">@dimen/dp16</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="noteContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp8</item>
        <item name="android:maxLines">2</item>
        <item name="android:fontFamily">@font/ibmplexsans_regular</item>
        <item name="android:textSize">@dimen/sp10</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="noteTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ibmplexsans_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginStart">@dimen/dp8</item>
    </style>

    <style name="userName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ibmplexsans_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:layout_marginStart">@dimen/dp8</item>
    </style>

    <style name="bottom_images">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/dp8</item>
        <item name="android:background">@color/foreground</item>
    </style>
</resources>