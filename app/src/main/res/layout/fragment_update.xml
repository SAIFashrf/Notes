<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="notes_update.UpdateNoteFragment"
    android:background="@color/background"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:animateLayoutChanges="true">

    <ImageView
        android:id="@+id/update_back"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        style="@style/back_button" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp16"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/update_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/update_back">

        <ImageView
            android:id="@+id/update_blue"
            style="@style/colors"
            android:background="@drawable/color1"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/update_purple"
            style="@style/colors"
            android:background="@drawable/color2"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/update_lemon"
            style="@style/colors"
            android:background="@drawable/color3"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/update_pink"
            style="@style/colors"
            android:background="@drawable/color4"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/update_yellow"
            style="@style/colors"
            android:background="@drawable/color5"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <EditText
        android:id="@+id/update_title"
        android:hint="@string/note_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/update_back"
        tools:ignore="Autofill"
        style="@style/Title" />

    <EditText
        android:id="@+id/update_content"
        style="@style/Content"
        app:layout_constraintBottom_toTopOf="@id/update_the_uploaded_image"
        app:layout_constraintStart_toStartOf="@id/update_title"
        app:layout_constraintTop_toBottomOf="@id/update_title"
        tools:ignore="Autofill" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/update_the_uploaded_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:riv_corner_radius="@dimen/dp16"
        android:layout_margin="@dimen/dp16"
        app:layout_constraintTop_toBottomOf="@id/update_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/update_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:layout_gravity="bottom|end"
        android:contentDescription="@string/delete"
        android:focusable="true"
        android:layout_margin="@dimen/dp24"
        android:src="@drawable/ic_delete"
        app:backgroundTint="@color/lightBlue"
        app:flow_verticalAlign="center"
        app:tint="@color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/update_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:layout_margin="@dimen/dp24"
        android:layout_gravity="bottom|center_vertical"
        android:contentDescription="@string/upload_image"
        android:focusable="true"
        android:src="@drawable/ic_upload_image"
        app:backgroundTint="@color/lightBlue"
        app:tint="@color/white" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>